@model IEnumerable<WebApplicationFinal.Models.Account>
@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="~/Styles/MyAccount.css" rel="stylesheet" />
<h2>Account Settings</h2>


<div class="myaccount-container">

    <div class="card border-primary mb-3" style="width: 20rem; height: 17rem;">
        @foreach (var details in ViewBag.list1)
        {
            <div class="card-header">Account details</div>
            <div class="card-body">
                <div class=""> Username: @details.Name </div>
                <div class="">Location:  @details.location</div>
                <div class="">E-mail:  @details.email</div>
                <div class="">Full Name:  @details.full_name</div>
                <div class="">Phone number: @details.phone_NR</div>

                <a class="trips" href='@Url.Action("ShowAccount", "Account")'>
                    <div class="buttonprofile"><button type="button" id="buttons" class="btn btn-secondary btn-lg">Edit profile</button></div>
                </a>

            </div>
        }
    </div>



    <div class="card border-primary mb-3" style="width: 20rem; height: 17rem;">
        <div class="card-header">Your tags</div>
        <div class="card-body">
            @foreach (var details in ViewBag.list2)
            {

                <div> @details.tagname</div>
            }
            <a class="trips" href='@Url.Action("ShowTags", "Account")'> 
               <div class="buttontags"> <button type="button" class="btn btn-secondary btn-lg">Edit tags</button></div>
        </div>
    </div>

</div>